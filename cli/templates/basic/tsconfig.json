{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es5", "es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": false,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./build/",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "ignoreDeprecations": "5.0"
  },
  "include":[
    "./src/**/*",
    "./src/externals/*.d.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
